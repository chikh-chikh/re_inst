[commit]
  gpgSign = true 

[gpg] 
  program = gpg 

[core]
  editor = nvim
  excludesFile = ~/.gitignore.global

[code]
  pager = cat

[branch] 
  autosetuprebase = remote 

[pull]
	rebase = true

